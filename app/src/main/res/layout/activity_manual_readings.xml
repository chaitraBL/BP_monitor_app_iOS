<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reading.ManualReadings">

    <ProgressBar
        android:id="@+id/progress_manual"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/systa_read"
                android:text="@string/systolc"
                android:fontFamily="@font/arial"
                android:layout_marginStart="10dp"
                android:textColor="?android:textColorPrimary"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>
            <!--    android:layout_below="@+id/measurement_toolbar"-->

            <EditText
                android:id="@+id/manual_systa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/arial"
                android:textColor="?android:textColorPrimary"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:inputType="number"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />
            <!--    android:layout_below="@+id/measurement_toolbar"-->

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diasta_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/arial"
            android:layout_marginStart="8dp"
            android:textColor="?android:textColorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/dyastolic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/manual_diasta"
            android:layout_margin="10dp"
            android:fontFamily="@font/arial"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heart_rate1"
            android:fontFamily="@font/arial"
            android:textColor="?android:textColorPrimary"
            android:layout_margin="10dp"
            android:id="@+id/heartRate_read"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/manual_heartRate"
            android:layout_margin="10dp"
            android:fontFamily="@font/arial"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />

    </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/save_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/arial"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="8dp"
        android:text="@string/save"/>

